<section class="experience track" id="experience">
  <div class="heading experience-heading track-child">
    <div class="mask">
      <h1 class="main-heading track-child">Experience</h1>
    </div>
  </div>
  <div class="companies">
    {% for company in experience %}
      <div class="company" data-company='{{ company | json_encode }}'>
        <h1>{{ company.name }}</h1>
        <p>{{ company.designation }}</p>
        <p>{{ company.since }}</p>
        <div class="responsibility"></div>
      </div>
    {% endfor %}
  </div>
</section>
