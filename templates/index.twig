<div class="top">
  {% include "fragments/site-menu.twig" %}
  <section class="header">
    <div class="headings">
      <h1 class="main-heading">{{ name }}</h1>
      <h2 class="sub-heading">
        <a href="{{ company.url }}" target="_blank" title="{{ company.name }}">{{ company.name }}</a>
      </h2>
      <p class="bio">{{ aboutMe }}</p>
    </div>

    <div class="cover">
      <img class="avatar-image" src="{{ avatarUrl }}" alt="avatar url"/>
    </div>
  </section>
</div>

<div class="main">
  <div class="education">
    <h1 class="main-heading">Education</h1>
    <div class="cards">
      {% for degree in education|reverse %}
        <div class="card card{{ loop.index }}">
          <h1>{{ degree.name }}</h1>

          <h2>{{ degree.institute }}</h2>
          {% if degree.subject %}
            <p>{{ degree.subject }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
